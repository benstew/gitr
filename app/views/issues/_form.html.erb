<p id="notice"><%= notice %></p>
<%= form_for([@project, @issue]) do |f| %>
  <% if @issue.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@issue.errors.count, "error") %> prohibited this issue from being saved:</h2>
      <ul>
      <% @issue.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>

  <div class="field">
    <%= f.label :milestone %><br>
    <%= f.collection_select(:milestones, @project.milestones, :id, :title ) %>
  </div>

  <div class="actions" >
      <%= f.submit%>
  </div>
<% end %>
