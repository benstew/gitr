<p id="notice"><%= notice %></p>

<p>
  <strong>Project Name:</strong>
  <%= @project.name %>
</p>

<% if @project.description %>
  <p>
    <strong>Description:</strong>
    <%= @project.description %>
  </p>
<% end %>

<p>
  <strong>Github URL:</strong>
  <a href="<%= @project.url %>"><%= @project.url %></a>
</p>



<% if logged_in? && current_user.admin.id == @project.admin_id %>
  <p> You're the admin for this project! </p>
  <td><%= link_to 'Edit', edit_project_path(@project) %></td>
<% else %>
<p>
  <strong>Admin:</strong>
  <%= link_to @project.admin.user.name, @project.admin.user %>
</p>
<% end %>

<div id="collaborators">
  <h3>Collaborators:</h3>
  <ul>
    <% @project.collaborators.each do |collaborator| %>
      <li>
      <%= link_to collaborator.user.name, collaborator.user %>
    </li>
    <% end %>
  </ul>
</div>

<!--!!!!!!!!!!!!!!!!!!!!Milestones!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!  -->
<div id="milestones">
  <h3><%= link_to "Milestones:", project_milestones_path(@project) %></h3>
  <ul>
    <% @project.milestones.each do |milestone| %>
      <li>
        <td><%= link_to "#{milestone.title}", project_milestone_path(@project, milestone)%></td>
        <p>Description: <%=milestone.description %></p>
    </li>
    <% end %>
  </ul>
</div>
<% if logged_in? && current_user.id == @project.admin_id %>
  <%= link_to 'New Milestone', new_project_milestone_path(@project) %> |
<% end %>

<!--!!!!!!!!!!!!!!!!!!!!Issues!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!  -->
<div id="issues">
  <h3><%= link_to "Issues:", project_issues_path(@project) %></h3>
  <ul>
    <% @project.issues.each do |issue| %>
      <li>
        <td><%= link_to "#{issue.title}", project_issue_path(@project, issue)%></td>
        <p>Description: <%=issue.body %></p>
    </li>
    <% end %>
  </ul>
</div>
<% if logged_in? && current_user.id == @project.admin_id %>
  <%= link_to 'New Issue', new_project_issue_path(@project) %> |
<% end %>

<!--!!!!!!!!!!!!!!!!!!!!Feed!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!  -->
<div id="feed">
  <h3>Activity Feed</h3>
    <ol>
      <% @repo_events.each do |event| %>
        <p>
            <li><strong>Event Type: <%= event.type %></strong></li>
            <%= DateTime.parse(event.created_at).httpdate %> 
        </p>
      <% end %>
    </ol>
</div>


<%= link_to 'Back', projects_path %>
